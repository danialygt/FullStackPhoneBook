@model List<MyIdentityRole>

    <table class="table table-bordered table-striped table-dark">
        <tr>
            <th>Roles</th>
            <th>Actions</th>
        </tr>

        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-info btn-icon-split" asp-action="Update" asp-controller="Role" asp-route-id="@item.Id">
                            <span class="font-weight-bold m-1 text-gray-100">Edit</span>
                        </a>

                        |

                        <a class="btn btn-info btn-icon-split" asp-action="Delete" asp-controller="Role" asp-route-id="@item.Id">
                            <span class="font-weight-bold m-1 text-gray-100">Delete</span>
                        </a>
                    </td>
                </tr>
            }
        }

    </table>
