@model MyIdentityRole
@{
    ViewBag.Title = "Edit Role";
}


<form asp-action="Update" asp-controller="Role" method="post">

    <div class="form-group col-3">
        <label asp-for="@Model.Name"></label>
        <input type="text" asp-for="@Model.Name" class="form-control" maxlength="50">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>



    <div class="form-group col-3">
        <input type="submit" class="text-lg font-weight-bold  btn btn-info m-2 p-2 float-right" value="Edit" />

        <a class="btn btn-secondary   float-right" style="padding:8px;margin-top:9px;" asp-action="Index" asp-controller="Role">
            <span class="font-weight-bold text-lg">Back</span>
        </a>
    </div>
</form>