@model CreateUserViewModel
@{
    ViewData["Title"] = "Add User";
}


<form asp-action="Create" asp-controller="User" method="post">
    <div class="form-group col-3">
        <label asp-for="FirstName"></label>
        <input type="text" asp-for="FirstName" class="form-control" maxlength="50">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col-3">
        <label asp-for="LastName"></label>
        <input type="text" asp-for="LastName" class="form-control" maxlength="50">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group col-3">
        <label asp-for="Birthday"></label>
        <input type="date" asp-for="Birthday" class="form-control">
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>
    <div class="form-group col-3">
        <label asp-for="UserName"></label>
        <input type="text" asp-for="UserName" class="form-control" maxlength="50">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group col-3">
        <label asp-for="Email"></label>
        <input type="text" asp-for="Email" class="form-control" maxlength="100">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group col-3">
        <label asp-for="Password"></label>
        <input type="text" asp-for="Password" class="form-control" maxlength="50">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group col-3">
        <input type="submit" class="text-lg font-weight-bold  btn btn-info m-2 p-2 float-right" value="Save" />
    </div>
</form>


<div class="form-group col-3">
    <a class="btn btn-secondary   float-right" style="padding:8px;margin-top:9px;" asp-action="Index" asp-controller="User">
        <span class="font-weight-bold text-lg">Back</span>
    </a>
</div>

