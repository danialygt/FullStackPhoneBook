@model UpdateUserViewModel
@{
    ViewData["Title"] = "Edit User";
}



    <form asp-action="Update" asp-controller="User" method="post">
        <div class="form-group col-3">
            <label>User: "<b>@Model.FullName</b>"  </label>
        </div>
        <div class="form-group col-3">
            <label asp-for="Email"></label>
            <input type="text" asp-for="Email" class="form-control" maxlength="50">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group col-3">
            <input type="submit" class="text-lg font-weight-bold  btn btn-info m-2 p-2 float-right" value="Save" />
        </div>
    </form>

<div class="form-group col-3">
    <a class="btn btn-secondary   float-right" style="padding:8px;margin-top:9px;" asp-action="Index" asp-controller="User">
        <span class="font-weight-bold text-lg">Back</span>
    </a>
</div>

