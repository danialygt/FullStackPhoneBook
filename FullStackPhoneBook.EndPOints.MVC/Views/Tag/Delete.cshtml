@model FullStackPhoneBook.EndPoints.MVC.Models.Tags.TagModel

@{
    ViewData["Title"] = "Delete Tag";
}

    <form asp-action="Delete" asp-controller="Tag" method="post">
        <div class="form-group col-3">
            <span>Are you sure to delete this: "<label>@Model.Title</label>"?</span>
        </div>
        <div class="form-group col-3">
            <input type="submit" class="text-lg font-weight-bold  btn btn-info m-2 p-2 float-right" value="Delete" />
        </div>
    </form>

<div class="form-group col-3">
    <a class="btn btn-secondary   float-right" style="padding:8px;margin-top:9px;" asp-action="Index" asp-controller="Tag">
        <span class="font-weight-bold text-lg">Back</span>
    </a>
</div>


