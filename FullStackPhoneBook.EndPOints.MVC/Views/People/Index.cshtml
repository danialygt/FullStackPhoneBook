@model List<FullStackPhoneBook.Domain.Core.People.Person>
@{
    ViewBag.Title = "People Page";
}

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-dark table-striped">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Detail</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>
                    <a class="btn btn-info btn-icon-split" asp-action="Detail" asp-controller="People" asp-route-id="@item.Id">
                        <span class="font-weight-bold m-1 text-gray-100">Detail</span>
                    </a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <b>there is no person!!!</b>
}

<div class="row justify-content-end">
    <div class="col-3">
        <a class="btn btn-info btn-icon-split" asp-action="Add" asp-controller="People">
            <span class="text-lg p-2 font-weight-bold m-2 text-gray-100">Add Person</span>
        </a>
    </div>
</div>