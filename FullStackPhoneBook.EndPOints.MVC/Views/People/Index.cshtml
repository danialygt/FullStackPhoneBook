@model List<FullStackPhoneBook.Domain.Core.People.Person>
@{
    ViewBag.Title = "index People";
}

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-dark table-striped" >
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Detail</th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>@item.FirstName</td>
        <td>@item.LastName</td>
        <td>@item.Email</td>
        <td>@item.Address</td>
        <td><a asp-controller="People" asp-action="Detail" asp-route-id="@item.Id">Detail</a></td>
    </tr>
        }
    </table>
}
else
{ 
    <b>there is no person!!!</b>
}
