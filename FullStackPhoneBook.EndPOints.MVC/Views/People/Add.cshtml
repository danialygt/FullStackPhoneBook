@model FullStackPhoneBook.EndPoints.Models.People.AddNewPersonDisplayViewModel
@{
    ViewBag.Title = "Add Person";

}
@section Head
{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    
}
<form asp-action="Add" asp-controller="People" method="post" enctype="multipart/form-data">

    <div class="form-group col-3">
        <label asp-for="FirstName"></label>
        <input type="text" asp-for="FirstName" class="form-control" maxlength="50">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col-3">
        <label asp-for="LastName"></label>
        <input type="text" asp-for="LastName" class="form-control" maxlength="50">
        <span asp-validation-for="LastName" class="text-danger"></span>

    </div>
    <div class="form-group col-3">
        <label asp-for="Email"></label>
        <input type="text" asp-for="Email" class="form-control" maxlength="256">
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div class="form-group col-3">
        <label asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" maxlength="500">
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div class="form-group col-3">
        <label asp-for="Image"></label>
        <input type="file" asp-for="Image" class="form-control">
        <span asp-validation-for="Image" class="text-danger"></span>

    </div>
    <div class="form-group col-3">
        <label>Tags</label>
        <select class="js-example-basic-multiple form-control select2" name="SelectedTag" multiple>
            @foreach (var item in Model.TagsForDisplay)
            {
                <option value="@item.Id">@item.Title</option>
            }
        </select>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group col-3">
        <input type="submit" class="text-lg font-weight-bold  btn btn-info m-2 p-2 float-right" value="Save" />
    </div>
</form>


<div class="form-group col-3">
    <a class="btn btn-secondary   float-right" style="padding:8px;margin-top:9px;" asp-action="Index" asp-controller="People">
        <span class="font-weight-bold text-lg">Back</span>
    </a>
</div>



@section Scripts 
{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2();
        });
    </script>
}




